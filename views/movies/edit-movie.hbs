<h2>EDIT MOVIE</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
    <label for="title">TITLE</label>
    <input type="text" name="title" value="{{movie.title}}" required>
    <br>
    <br>
    <label for="genre">GENRE</label>
    <input type="text" name="genre" value="{{movie.genre}}" required>
    <br>
    <br>
    <label for="plot">PLOT</label>
    <input type="text" name="plot" value="{{movie.plot}}" required>
    <br>
    <br>
    <label for="cast">CAST</label>

    <select type="text" name="cast" multiple="true" required>
        {{#each allCelebs}}
        {{#if this.isSelected}}
        <option value="{{this._id}}" selected=>{{this.name}}</option>
        {{else}}
        <option value="{{this._id}}">{{this.name}}</option>

        {{/if}}
        {{/each}}
    </select>
    <br>
    <br>

    <button>SUBMIT</button>
</form>